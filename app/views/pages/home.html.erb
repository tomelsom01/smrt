<div class="card container">
  <h2>Contact Me</h2>
  <%= form_for @contact_form do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div> <!-- closes .form-group -->

