      <%= f.text_field :address, class: 'form-control' %> <!-- corrected field type -->
    </div> <!-- closes .form-group -->

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :telephone %>
      <%= f.text_field :telephone, class: 'form-control' %> <!-- corrected field type -->
    </div>

    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :message, class: 'form-control' %>
    </div>

    <%= f.submit 'Send', class: 'mt-2 btn btn-dark' %>
  <% end %>
</div>

